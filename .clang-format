BasedOnStyle: Google
Language: Cpp

# General formatting
ColumnLimit: 120
IndentWidth: 2
UseTab: Never

# Brace / bracket style: Allman
BreakBeforeBraces: Allman
BraceWrapping:
  AfterClass: true
  AfterStruct: true
  AfterEnum: true
  AfterFunction: true
  AfterNamespace: true
  AfterUnion: true
  BeforeCatch: true
  BeforeElse: true
  BeforeWhile: true

# Pointer & array style
PointerAlignment: Left
